<% if logged_in? %>
  <div class="row">
    <div class="col-md-7 col-md-offset-1">
      <%= render 'shared/feed' %>
    </div>
    <aside class="col-md-4">
      <section class="user_info home_user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-4 col-md-offset-6">
      <div>
        <h1 id="logo">Instaclone</h1>
        <p>友達の写真や動画をチェックしよう</p>
        <%= link_to "Facebookでログイン", "#", class: "btn btn-primary" %>
        <p>または</p>

        <%= form_for(@user, url: root_url) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.email_field :email, class: 'form-control', placeholder: "メールアドレス" %>
        <%= f.text_field :full_name, class: 'form-control', placeholder: "フルネーム" %>
        <%= f.text_field :user_name, class: 'form-control', placeholder: "ユーザーネーム" %>
        <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "パスワードの再確認" %>

        <%= f.submit "登録する", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div>
        <span>アカウントをお持ちですか？</span>
        <font color="royalblue">
          <%= link_to("ログインする", login_path) %>
        </font>
      </div>
    </div>
  </div>
<% end %>
