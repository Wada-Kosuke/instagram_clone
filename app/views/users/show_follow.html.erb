<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-6">
    <div class="current_user_in_show_follow">
      <%= render 'shared/user_info' %>
    </div>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-6">
    <h3 style="margin-bottom: 16px;"><%= @title %></h3>
    <% if @users.any? %>
      <ul class="follow_ls">
        <%= render 'relationship_list' %>
      </ul>
    <% end %>
  </div>
</div>
